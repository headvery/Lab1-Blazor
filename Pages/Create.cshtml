@page "/add"
@model Lab2.Pages.CreateModel
@{
    ViewData["Title"] = "Create data";
}

<div class="text-center">
	<h1 class="display-4">@(Model.IsEditing ? "Изменение" : "Добавление") блюда</h1>
</div>

<form class = "form-horizontal" method = "post">
	<div class = "form-group">
		<label for = "dishname">Название блюда</label>
		<div class = "col-sm-10">
			<input id = "dishname" name = "dishname" type = "text" value = "@Model.DishName" required/>
		</div>
	</div>
	<div class = "form-group">
		<div class = "form-group">
		<label for = "day">День недели</label>
		<div class = "col-sm-10">
			<select name = "days" asp-items="Model.DaysList.Select(x => new SelectListItem { Value = x, Text = x})"></select>
		</div>
	</div>
		<div class = "form-group">
		<label for = "mealtime">Время приёма пищи</label>
		<div class = "col-sm-10">
			<select name = "mealstime" asp-items = "Model.MealsTypeList.Select(x => new SelectListItem { Value = x, Text = x})"></select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">Сохранить</button>
		</div>
	</div>

	<a asp-page = "/Index">Назад</a>
</form>